{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase-debug.log",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/update*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "private, no-cache, no-store, must-revalidate, max-age=0, s-maxage=0"
          },
          {
            "key": "Pragma",
            "value": "no-cache"
          },
          {
            "key": "Expires",
            "value": "Fri, 01 Jan 1990 00:00:00 GMT"
          },
          {
            "key": "Surrogate-Control",
            "value": "no-store"
          },
          {
            "key": "CDN-Cache-Control",
            "value": "no-cache"
          },
          {
            "key": "Vary",
            "value": "User-Agent, Accept-Encoding"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/update/v0.28.0",
        "destination": "https://github.com/HT14813/The-Mutants-updates/releases/download/0.28beta2/The-Mutants-setup-x64-v0.28.exe",
        "type": 302,
        "comment": "Always update the link whenever a new version is released :)"
      },
      {
        "source": "/update",
        "destination": "update/v0.28.0",
        "type": 302,
        "comment": "It always changes every time a new version comes out :)"
      }
    ]
  }
}